<h2 class="text-center mb-4" >S'inscrire</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-sirius form-account form-full-page" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } ,  label: "Mot de passe"%>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },  label: "Confirmation du mot de passe" %>
    <%= f.input :city, required: true, autofocus: true,  label: "Ville" %>
    <%= f.input :country, required: true, autofocus: true,  label: "Pays" %>
    <%= f.input :address_1, required: true, autofocus: true,  label: "Addresse" %>
    <%= f.input :address_2, autofocus: true, label: "Complément d'adresse",  hint: "Facultatif"  %>
    <%= f.input :post_code, required: true, autofocus: true,  label: "Code postal" %>
    <%= f.input :first_name, required: true, autofocus: true, label: "Prénom" %>
    <%= f.input :last_name, required: true, autofocus: true,  label: "Nom" %>
    <%= f.input :phone_number, required: true, autofocus: true ,  label: "Numéro de téléphone"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirmer l'inscription", class: 'btn-sirius-thick' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

